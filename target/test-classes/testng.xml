<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="AutomationFrameworkSuite" verbose="1" parallel="tests" thread-count="2">

    <!-- Web Tests Suite -->
    <test name="WebLoginChromeTests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.example.tests.web.WebLoginTests"/>
        </classes>
    </test>

    <test name="WebLoginFirefoxTests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.example.tests.web.WebLoginTests"/>
            <!-- Add other web test classes here -->
        </classes>
    </test>

    <!-- Mobile Tests Suite -->
    <!-- Ensure Appium server is running and configured for the target device/emulator -->
    <test name="MobileLoginAndroidTests">
        <!-- Parameters for Android tests -->
        <parameter name="platformName" value="Android"/>
        <parameter name="deviceName" value="Android Emulator"/> <!-- Or a specific device name/UDID from your config -->
        <parameter name="appPathOrPackage" value="src/test/resources/apps/android/AndroidDemoApp.apk"/> <!-- Updated placeholder -->
        <parameter name="appiumServerUrl" value="http://127.0.0.1:4723/wd/hub"/>
        <classes>
            <class name="com.example.tests.mobile.MobileLoginTests"/>
            <!-- Add other mobile test classes here -->
        </classes>
    </test>

    <!-- Example for iOS (Commented out as setup might be different) -->
